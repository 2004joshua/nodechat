# ───── Stage 1: Build Go API ─────
FROM golang:1.20-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
WORKDIR /app/cmd/api
RUN go build -o nodechat-api main.go

# ───── Stage 2: Runtime ─────
FROM alpine:3.18
WORKDIR /app
COPY --from=builder /app/cmd/api/nodechat-api ./nodechat-api

EXPOSE 8081
ENTRYPOINT ["./nodechat-api"]
